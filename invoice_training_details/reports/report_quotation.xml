<t name="Quotation Report Training" t-name="invoice_training_details.report_quotation_document_training">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-set="lang" t-value="o.partner_id.lang"/>
                <t t-call="invoice_training_details.custom_invoice_report_layout">
                    <t t-set="o" t-value="o.with_context(lang=lang)"/>
                    <t t-set="forced_vat" t-value="o.fiscal_position_id.foreign_vat"/>
                    <div class="row">
                        <div class="col-12">
                            <span class="h4 text-info">Quotation</span>
                        </div>
                    </div>
                    <div class="row pt-3 pb-3">
    <div class="col-8">
        <div>
            <strong t-if="o.partner_id.is_company == True">Company Name:</strong>
            <div t-if="o.partner_id.is_company == True" t-field="o.partner_id.name"/>
            <strong t-if="o.partner_id.is_company == False">Company Name:</strong>
            <div t-if="o.partner_id.is_company == False" t-field="o.partner_id.parent_id.name"/>
            <strong t-if="o.partner_id.is_company == True">Location:</strong>
            <div t-if="o.partner_id.is_company == True">
                <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.country_id.name"/>
            </div>
            <strong t-if="o.partner_id.is_company == False">Location:</strong>
            <div t-if="o.partner_id.is_company == False">
                <span t-field="o.partner_id.city"/>, <span t-field="o.partner_id.country_id.name"/>
            </div>
            <strong t-if="o.partner_id.is_company == True">Tax Number:</strong>
            <div t-if="o.partner_id.is_company == True" t-field="o.partner_id.vat"/>
            <strong t-if="o.partner_id.is_company == False">Tax Number:</strong>
            <div t-if="o.partner_id.is_company == False" t-field="o.partner_id.parent_id.vat"/>
            <strong t-if="o.partner_id.is_company == False">Attention:</strong><br/>
            <div t-if="o.partner_id.is_company == False" t-field="o.partner_id.name"/>
        </div>
    </div>
    <div class="col-4">
        <div>
            <table class="table table-borderless">
                <tr class="p-0">
                    <td class="p-0" style="vertical-align: middle;">QUOTATION</td>
                    <td class="p-0" style="vertical-align: middle;"><span t-field="o.name"/></td>
                </tr>
                <tr class="p-0">
                    <td class="p-0" style="vertical-align: middle;">DATE</td>
                    <td class="p-0" style="vertical-align: middle;"><span t-field="o.date_order"/></td>
                </tr>
                <tr class="p-0">
                    <td class="p-0" style="vertical-align: middle;">DUE DATE</td>
                    <td class="p-0" style="vertical-align: middle;"><span t-field="o.validity_date"/></td>
                </tr>
            </table>
        </div>
    </div>
</div>
