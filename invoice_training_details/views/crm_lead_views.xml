<odoo>
    <!-- Tree View for Training Costs -->
    <record id="view_training_costs_tree" model="ir.ui.view">
        <field name="name">training.costs.tree</field>
        <field name="model">training.costs</field>
        <field name="arch" type="xml">
            <tree string="Training Costs">
                <field name="name" />
                <field name="price" />
                <field name="cost" />
                <field name="margin" />
            </tree>
        </field>
    </record>

    <!-- Form View for Training Costs -->
    <record id="view_training_costs_form" model="ir.ui.view">
        <field name="name">training.costs.form</field>
        <field name="model">training.costs</field>
        <field name="arch" type="xml">
            <form string="Training Costs">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="price"/>
                            <field name="cost"/>
                            <field name="margin"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action to open the Training Costs model -->
    <record id="action_training_costs" model="ir.actions.act_window">
        <field name="name">Training Costs</field>
        <field name="res_model">training.costs</field>
        <field name="view_mode">tree,form</field>
        <field name="target">current</field>
    </record>

    <!-- Menu item to access Training Costs -->
    <menuitem id="menu_training_costs" name="Training Costs"
              parent="crm.crm_menu_root"
              action="action_training_costs"/>

    <!-- Add new fields to CRM Lead form -->
    <record id="view_crm_lead_form_inherit_training_costs" model="ir.ui.view">
        <field name="name">crm.lead.form.inherit.training.costs</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='partner_id']" position="after">
                <group>
                    <field name="training_cost" string="Training Cost"/>
                    <field name="logistics_cost" string="Logistics Cost"/>
                    <field name="training_margin" string="Training Margin" readonly="1"/>
                </group>
            </xpath>
        </field>
    </record>

    <!-- Add the related fields to the model (CRM Lead) -->
    <record id="model_crm_lead" model="ir.model">
        <field name="model">crm.lead</field>
        <field name="name">crm.lead</field>
        <field name="field_ids" eval="[(0, 0, {'name': 'training_cost', 'ttype': 'float', 'string': 'Training Cost'}),
                                      (0, 0, {'name': 'logistics_cost', 'ttype': 'float', 'string': 'Logistics Cost'}),
                                      (0, 0, {'name': 'training_margin', 'ttype': 'float', 'string': 'Training Margin'})]"/>
    </record>

</odoo>
