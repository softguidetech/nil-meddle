<odoo>
    <record id="crm_reveal_lead_opportunity_form_training" model="ir.ui.view">
        <field name="name">crm.lead.inherited.crm.training</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            
            <!-- Instructor Field -->
            <xpath expr="//field[@name='tag_ids']" position="after">
                <field name="instructor_id"/>
            </xpath>
            
            <!-- Ordering Partner -->
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="ordering_partner_id"/>
            </xpath>

            <!-- Costs Details Tab -->
            <page id="clcs" name="Costs Details">
                <group>
                    <button name="action_create_cost_line" type="object" string="Add Cost Line" class="oe_highlight"/>
                </group>
                <field name="cost_detail_ids">
                    <tree editable="bottom">
                        <field name="name"/>
                        <field name="total_price_all"/>
                        <field name="currency_id"/>
                        <field name="training_vendor"/>
                        <field name="clc_cost"/>
                        <field name="rate_card"/>
                        <field name="nilme_share"/>
                        <field name="margin1"/>
                    </tree>
                </field>
            </page>
                <!-- Professional Services Tab -->
                <page id="pro" name="Professional Services">
                    <group>
                        <field name="service_name"/>
                    </group>
                    <field name="pro_service_ids">
                        <tree editable="bottom">
                            <field name="training_id"/>
                            <field name="descriptions"/>
                            <field name="cost_clc"/>
                            <field name="hyperlink"/>
                            <field name="wor_hour_number"/>
                            <field name="train_language"/>
                            <field name="duration"/>
                            <field name="training_date_start"/>
                            <field name="hourly_rate"/>
                            <field name="price"/>
                        </tree>
                    </field>
                    <group>
                        <group>
                            <field name="total_service_price"/>
                        </group>
                    </group>
                </page>

                <!-- Extra Information Tab -->
                <page id="extra_information" name="Extra Information">
                    <group>
                        <group>
                            <field name="clcs_qty"/>
                            <field name="so_no"/>
                            <field name="tr_expiry_date"/>
                            <field name="poref"/>
                            <field name="invref"/>
                        </group>
                    </group>
                </page>

                <!-- Logistics Tab -->
                <page id="logistics" name="Logistics">
                    <group>
                        <field name="ctrng"/>
                        <field name="venue"/>
                        <field name="uber"/>
                    </group>
                    <field name="ticket_ids">
                        <tree editable="bottom">
                            <field name="airline_id"/>
                            <field name="origin_id"/>
                            <field name="destination_id"/>
                            <field name="date"/>
                            <field name="duration"/>
                            <field name="time_from" widget="timesheet_uom"/>
                            <field name="time_to" widget="timesheet_uom"/>
                            <field name="stop"/>
                            <field name="class_type_id"/>
                            <field name="currency_id"/>
                            <field name="price"/>
                        </tree>
                    </field>
                    <field name="hotel_ids">
                        <tree editable="bottom">
                            <field name="hotel_id"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                            <field name="nights"/>
                            <field name="location"/>
                            <field name="pax"/>
                            <field name="des"/>
                            <field name="room_type"/>
                            <field name="currency_id"/>
                            <field name="price_without_tax"/>
                            <field name="tax"/>
                            <field name="price"/>
                        </tree>
                    </field>
                    <group string="Visa Details">
                        <field name="visa"/>
                        <field name="start_date"/>
                        <field name="to_date"/>
                        <field name="book_details_id" widget="many2many_binary"/>
                        <field name="details"/>
                        <field name="cost"/>
                    </group>
                    <group>
                        <field name="total_price_all"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
