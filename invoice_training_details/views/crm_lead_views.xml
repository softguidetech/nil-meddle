<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="crm_reveal_lead_opportunity_form_training" model="ir.ui.view">
    <field name="name">crm.lead.inherited.crm.training</field>
    <field name="model">crm.lead</field>
    <field name="inherit_id" ref="crm.crm_lead_view_form"/>
    <field name="arch" type="xml">
      
      <!-- Add fields after 'tag_ids' -->
      <xpath expr="//field[@name='tag_ids']" position="after">
        <field name="instructor_id"/>
      </xpath>
      
      <!-- Add fields after 'partner_id' -->
      <xpath expr="//field[@name='partner_id']" position="after">
        <field name="ordering_partner_id"/>
      </xpath>
      
      <!-- Insert pages before the internal notes page -->
      <xpath expr="//page[@name='internal_notes']" position="before">
      
        <!-- Training page -->
        <page id="training" name="Training">
          <group>
            <field name="training_vendor"/>
            <field name="training_type"/>
          </group>
          <field name="training_course_ids">
            <tree editable="bottom">
              <field name="training_id"/>
              <field name="cost_clc"/>
              <field name="train_language"/>
              <field name="location"/>
              <field name="payment_method"/>
              <field name="clcs_qty"/>
              <field name="so_no"/>
              <field name="tr_expiry_date"/>
              <field name="training_date_start"/>
              <field name="training_date_end"/>
              <field name="price"/>
            </tree>
          </field>
          <group>
            <field name="total_training_price"/>
          </group>
        </page>
        
        <!-- Costs Details page -->
        <page id="clcs" name="Costs Details">
          <group>
            <field name="cost_vendor"/>
          </group>
          <field name="costs_line_ids">
            <tree editable="bottom">
              <field name="clc_cost"/>
              <field name="rate_card"/>
              <field name="nilme_share"/>
              <field name="cisco_training_cost"/>
              <field name="partner"/>
            </tree>
          </field>
          <group>
            <field name="total_cost_price"/>
          </group>
        </page>
      </xpath>
    </field>
  </record>
</odoo>
